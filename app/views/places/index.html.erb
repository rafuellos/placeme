<h2><%= current_user.name %>!</h2>

<p>
<strong>Email:</strong> <%= current_user.email %>
<%= link_to 'Places', user_places_path(current_user.id) %>
<%= link_to 'Create Place', new_user_place_path(current_user.id) %>
</p>


<p id="notice"><%= notice %></p>

<h1>Listing Places</h1>

<table>
  <thead>
    <tr>
      <th>Place id</th>
      <th>Comment</th>
      <th>Owner_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @places.each do |place| %>
      <tr>
        <td><%= place.id %></td>
        <td><%= place.comments %></td>
        <td><%= place.owner_id %></td>

        <td><%= link_to '<i class="fa fa-caret-left fa-2x"></i>'.html_safe, profile_path%><td>
        <td><%= link_to '<i class="fa fa-pencil fa-2x"></i>'.html_safe, edit_user_place_path(current_user.id, place.id)%><td>
        <td><%= link_to '<i class="fa fa-trash-o fa-2x"></i>'.html_safe, user_place_path(current_user.id, place.id), method: :delete, data: { confirm: 'Are you sure?' }%><td>
        <td><%= image_tag place.photo.url(:thumb)%></td>


      </tr>
    <% end %>
  </tbody>
</table>